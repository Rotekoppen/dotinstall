# mod key
set $mod Mod4

# terminal
set $term termite


### Output configuration and background
exec cp ~/background ~/currentbg && \
wget https://source.unsplash.com/random/3200x1800 -O ~/background && \
wal -c && \
wal --backend colorz -i ~/currentbg

output * bg ~/currentbg fill
output eDP-1 scale 2
output HDMI-A-1 resolution 1920x1080 position 1920,0 scale 1


### Theming
include "$HOME/config/sway/theme"

### Keyboard configuration
include "$HOME/config/sway/input"

### Key bindings
include "$HOME/config/sway/keybinds"

### Modes
include "$HOME/config/sway/modes"

### Window rules
include "$HOME/config/sway/rules"


### Idle configuration
exec swayidle -w \
timeout 300 'exec sh /home/tobias/config/scripts/lock.sh'




### Idk, shrugs...
include /etc/sway/config.d/*


### Autostart
include "$HOME/config/sway/autostart"
