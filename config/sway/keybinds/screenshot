# CTRL = Copy
# ALT = Freeselect
# MOD = Locked to windows

bindsym --release Print exec sh ~/config/scripts/sway/screenshot.sh
bindsym --release Print+Control exec sh ~/config/scripts/sway/screenshot-copy.sh

bindsym --release Print+Alt exec sh ~/config/scripts/sway/screenshot-area.sh
bindsym --release Print+Control+Alt exec sh ~/config/scripts/sway/screenshot-area-copy.sh

bindsym --release Print+$mod exec sh ~/config/scripts/sway/screenshot-window.sh
bindsym --release Print+Control+$mod exec sh ~/config/scripts/sway/screenshot-window-copy.sh
