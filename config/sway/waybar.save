{
"layer": "top",
"height": 24,
"modules-left": ["mpd", "sway/workspaces", "sway/mode"],
"modules-center": ["sway/window"],
"modules-right": ["battery", "idle_inhibitor", "cpu", "temperature", "backlight", "pulseaudio", "clock"],
"sway/window": {
  "max-length": 50
},

"battery": {
  "format": "{capacity}% {icon}",
  "format-icons": ["", "", "", "", ""]
},

"clock": {
  "format": "{:%a, %d. %b  %H:%M:%S}",
  "format-alt": "{:%a, %d. %b  %H:%M}",
  "interval": 1
},

"mpd": {
  "port": 16850,
  "max-length":60,
  "format": "{stateIcon} {consumeIcon} {randomIcon} {repeatIcon} {singleIcon} ({elapsedTime:%M:%S}/{totalTime:%M:%S})  {title} - {artist}",
  "format-disconnected": "Disconnected ",
  "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon} Stopped ",
  "unknown-tag": "N/A",
  "interval": 2,
  "consume-icons": {
    "on": " "
  },

  "random-icons": {
    //"off": "<span color=\"#f53c3c\"></span> ",
    "on": " "
  },

  "repeat-icons": {
    "on": "f363 "
  },

  "single-icons": {
    "on": "1 "
  },

  "state-icons": {
    "paused": "",
    "playing": ""
  },

  "on-scroll-up": "mpc volume -p 16850 +3",
  "on-scroll-down": "mpc volume -p 16850 -3",
  "tooltip-format": "MPD (connected)\n{artist}\n{album}\n{title}",
  "tooltip-format-disconnected": "MPD (disconnected)"
},

"idle_inhibitor": {
  "format": "{icon}",
  "format-icons": {
    "activated": "",
    "deactivated": ""
  }
},

"temperature": {
  "thermal_zone": "cooling_device0",
  "format": "{temperatureC}°C "
},

"cpu": {
  "interval": 10,
  "format": "{}% "
},
"pulseaudio": {
  "format": "{volume}% {icon}",
  "format-bluetooth": "{volume}% {icon}",
  "format-muted": "",
  "format-icons": {
    "headphone": " ",
    "hands-free": "",
    "headset": "",
    "phone": "",
    "portable": "",
    "car": "",
    "default": ["", ""]
  },
  "scroll-step": 1,
  "on-click": "pavucontrol"
},
"backlight": {
  "device": "intel_backlight",
  "format": "{percent}% {icon}",
  "format-icons": ["", ""],
  "on-scroll-up": "brightnessctl set +1%",
  "on-scroll-down": "brightnessctl set 1%-"
}

}
